{
  "name": "discarr",
  "version": "2.0.0",
  "description": "Discord bot for monitoring Radarr and Sonarr instances",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "watch": "tsx watch src/index.ts",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write src/**/*.ts"
  },
  "keywords": [
    "discord",
    "radarr",
    "sonarr",
    "plex",
    "monitoring"
  ],
  "author": "Eric Briscoe",
  "license": "MIT",
  "dependencies": {
    "@types/xml2js": "^0.4.14",
    "axios": "^1.6.7",
    "discord.js": "^14.14.1",
    "dotenv": "^16.4.4",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@types/node": "^20.11.17",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.5",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
